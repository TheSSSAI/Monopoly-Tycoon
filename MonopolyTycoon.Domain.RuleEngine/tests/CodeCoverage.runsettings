<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Configurations for test execution -->
  <RunConfiguration>
    <ResultsDirectory>.\TestResults</ResultsDirectory>
    <TargetFrameworkVersion>.NETCoreApp,Version=v8.0</TargetFrameworkVersion>
  </RunConfiguration>

  <!-- Configurations for Coverlet code coverage -->
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura</Format>
          <!-- Exclude test projects from coverage analysis -->
          <ExcludeByFile>**/tests/*.cs</ExcludeByFile>
          <ExcludeByAttribute>GeneratedCodeAttribute</ExcludeByAttribute>
          <!-- Exclude DI setup extensions as they are composition root logic -->
          <Exclude>[MonopolyTycoon.Domain.RuleEngine]MonopolyTycoon.Domain.RuleEngine.DependencyInjection.*</Exclude>
          <SingleHit>true</SingleHit>
          <UseSourceLink>true</UseSourceLink>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>