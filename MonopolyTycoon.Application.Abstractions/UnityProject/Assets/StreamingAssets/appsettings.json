{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // REQ-1-019: INFO for key game events
      "MonopolyTycoon.Infrastructure.AI": "Debug" // REQ-1-019: DEBUG for AI decision-making
    },
    "File": {
      "Path": "%APPDATA%/MonopolyTycoon/logs/log-.json", // REQ-1-075
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7, // REQ-1-021
      "FileSizeLimitBytes": 52428800 // 50 MB, REQ-1-021
    }
  },
  "AISettings": {
    // REQ-1-063: All tunable AI behavior parameters...must be stored in an external JSON configuration file
    "Easy": {
      "Personality": "Passive",
      "PropertyAcquisition": {
        "BasePurchaseChance": 0.6,
        "MonopolyFocusFactor": 1.2,
        "UtilityPurchaseChance": 0.4,
        "RailroadPurchaseChance": 0.5
      },
      "Building": {
        "BuildUrgencyThresholdCash": 500,
        "EvenBuildCompliance": 0.9
      },
      "Trading": {
        "TradeInitiationChance": 0.1,
        "AcceptanceThresholdModifier": -0.25, // More likely to accept bad trades
        "MonopolyCompletionValueMultiplier": 1.5
      },
      "Financial": {
        "MortgageAversion": 0.2, // Low aversion, mortgages easily
        "CashReserveTargetPercentage": 0.1
      }
    },
    "Medium": {
      "Personality": "Balanced",
      "PropertyAcquisition": {
        "BasePurchaseChance": 0.85,
        "MonopolyFocusFactor": 1.8,
        "UtilityPurchaseChance": 0.6,
        "RailroadPurchaseChance": 0.75
      },
      "Building": {
        "BuildUrgencyThresholdCash": 350,
        "EvenBuildCompliance": 1.0 // Strict compliance
      },
      "Trading": {
        "TradeInitiationChance": 0.3,
        "AcceptanceThresholdModifier": 0.0, // Evaluates trades fairly
        "MonopolyCompletionValueMultiplier": 2.5
      },
      "Financial": {
        "MortgageAversion": 0.6,
        "CashReserveTargetPercentage": 0.2
      }
    },
    "Hard": {
      "Personality": "Aggressive",
      "PropertyAcquisition": {
        "BasePurchaseChance": 1.0,
        "MonopolyFocusFactor": 3.0,
        "UtilityPurchaseChance": 0.7,
        "RailroadPurchaseChance": 0.9
      },
      "Building": {
        "BuildUrgencyThresholdCash": 200,
        "EvenBuildCompliance": 1.0,
        "HousingShortageStrategyEnabled": true // REQ-1-064
      },
      "Trading": {
        "TradeInitiationChance": 0.5,
        "AcceptanceThresholdModifier": 0.15, // Demands favorable trades
        "MonopolyCompletionValueMultiplier": 4.0,
        "OpponentBlockingValueMultiplier": 1.5 // REQ-1-064
      },
      "Financial": {
        "MortgageAversion": 0.8, // High aversion, avoids mortgaging
        "CashReserveTargetPercentage": 0.15
      }
    }
  },
  "GameSettings": {
    "RulebookPath": "Data/rulebook_en.json", // REQ-1-083
    "LocalizationPath": "Data/Localization/" // REQ-1-084
  }
}